<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 >Welcome to ArticleCamp!</h1>
            <p>View our articles from people all over the world</p>
            <p>
                <a class ="btn btn-primary btn-large" href="/articles/new">Add new article!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% articles.forEach(function(article){%>
            <div class="col-md-4 col-sm-6">
                

                <div class="thumbnail">
                    <img src="<%= article.image %>"></img>
                    <div class="caption">
                        <h4><%= article.name %></h4>
                    </div>
                    <p>
                        <a href="/articles/<%= article._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% });%>
    </div>
    
    
    
</div>
<% include ../partials/footer %>