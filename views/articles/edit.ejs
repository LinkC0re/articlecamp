<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit the <%= article.name%>!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type ="text" placeholder="name" name="article[name]" value="<%= article.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" placeholder="image url" name="article[image]" value="<%= article.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" placeholder="description" name="article[description]" value="<%= article.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/articles">Go back!</a>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>